<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    <Button
        android:id="@+id/buttonSync"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Sync" />

    <HorizontalScrollView
        android:id="@+id/sourceHSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" 
		android:layout_toLeftOf="@+id/clearSourceDevice" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
		    <TextView
		        android:id="@+id/from"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:text="From" />
		    
		    <TextView
		        android:id="@+id/sourceDevice"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="15dp"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:text="" />
	    </LinearLayout>
	</HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/destinationHSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sourceHSV"
        android:layout_below="@+id/sourceHSV" 
        android:layout_toLeftOf="@+id/clearDestinationDevice" >
	    
	    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
	            
		    <TextView
		        android:id="@+id/to"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:text="To" />
		    
		    <TextView
		        android:id="@+id/destinationDevice"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="42dp"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:text="" />
	    </LinearLayout>
	</HorizontalScrollView>
	
    <Button
        android:id="@+id/clearSourceDevice"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sourceHSV"
        android:layout_alignBottom="@+id/sourceHSV"
        android:layout_alignParentRight="true"
        android:text="Clear" />

    <Button
        android:id="@+id/clearDestinationDevice"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/destinationHSV"
        android:layout_alignBottom="@+id/destinationHSV"
        android:layout_alignParentRight="true"
        android:text="Clear" />

    <Button
        android:id="@+id/rescanDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/destinationHSV"
        android:layout_alignTop="@+id/buttonSync"
        android:text="Scan and Select" />

</RelativeLayout>